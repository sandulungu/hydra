{
    "name": "hydra/hydra",
    "type": "library",
    "description": "The cozy RESTfull PHP5.3 micro-framework.",
    "homepage": "http://z7.github.com/hydra",
    "keywords": [
        "microframework", "framework",
        "dependency injection", "form builder", "REST", "router", "MVC",
        "micro", "lightweight", "simple", "plugins",
        "Twig", "MongoDB", "PDO", "Twitter Bootstrap", "Monolog", "Symfony"
    ],
    "replace": {
        "z7/hydra": "self.version"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Sandu Lungu",
            "email": "sandu@lungu.info"
        }
    ],
    "require": {
        "php": ">=5.3.4",
        "twig/twig": "1.*",
        "symfony/http-kernel": "2.*",
        "monolog/monolog": "1.*"
    },
    "require-dev": {
        "symfony/finder": "2.*",
    },
    "autoload": {
        "psr-0" : {
            "Hydra" : "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    }
}